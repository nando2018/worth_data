doctype html
html
  head
    title knowledgebase
    link(rel= '/styleSheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel= '/styleSheet' href='/css/style.css')
  body
    nav.navbar.navbar-default(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type= "button", data-toggle="collapse", 
          data-target='#navbar' aria-expanded="false" aria-controls = "navbar>")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') knowledgebase
      #navbar.collapse.navbar-collapse
        ul.nav.narbar-nav
          li(class=(title=='Home' ? 'active' : ''))
            a(href= '/') Home
          li(class=(title=='Article' ? 'active' : ''))
            a(href= '/article') Article  
          li(class=(title=='Add article' ? 'active' : ''))
            a(href= '/articles/add') Add Article
          li(class=(title=='Author' ? 'active' : ''))
            a(href= '/author') Author
          li(class=(title=='User' ? 'active' : ''))
            a(href= '/user') User
          li(class=(title=='Home' ? 'active' : ''))
            a(href= '/photos') Photos
          li(class=(title=='Files' ? 'active' : ''))
            a(href= '/files') Files
          li(class=(title=='Register' ? 'active' : ''))
            a(href= '/users/register') Register
          li(class=(title=='Login' ? 'active' : ''))
            a(href= '/users/login') Login
          
        ul.nav.narbar-nav.narbar-right
          li(class=(title=='Logout' ? 'active' : ''))
            a(href= '/users/logout') Logout
    .container
      != messages()
      block content
      br
      hr
      footer
        p Copyright &copy; 2019
    script(src='/bower_components/jquery/dist/jquery.js')      
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')