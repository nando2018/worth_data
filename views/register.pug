extends layout

block content
  h2.page-header Register
  p Please register using the form below
  if errors
    each error, i in errors
      div.alert.alert.danger #{error.msg}
  p
  form(method = 'POST', action='/users/register', enctype='multipart/form-data')
          .form-group
            label Username:
            input.form-control(name= 'username', type='text',
            placeholder='username')
          p
          .form-group
            label Email:
            input.form-control(name= 'email', type='email',
            placeholder='email')
          p
          .form-group
            label Name:
            input.form-control(name= 'name', type='text',
            placeholder='name')
          p
          #form-group
            label Password:
            input.form-control(name= 'password', type='password',
            placeholder='password')
          p
          .form-group
            label Confirm:
            input.form-control(name= 'password2', type='password',
            placeholder='Confirm password')
          p
          .form-group
            label Profile Image:
            input.form-control(name= 'profileimage', type='file')
          p
          input.btn.btn.primary(type = 'submit',name='submit',  value= 'Register')

  